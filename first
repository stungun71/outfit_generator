        }
        
        .outfit-card {
            background: linear-gradient(135deg, #333 0%, #000 100%);
            color: white;
            transition: all 0.3s ease;
            border: 1px solid #555;
        }
        
        .outfit-card:hover {
            transform: scale(1.02);
            box-shadow: 0 15px 35px rgba(0,0,0,0.4);
        }
        
